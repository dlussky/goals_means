{% extends _layout %}

{% block content %}
    <style type="text/css">
        body > .grid {
            height: 100%;
        }

        #login-form .column {
            max-width: 450px;
        }

        #login-form {
            height: 80%;
        }
    </style>
    {% if(authorised == false) %}
        <div class="ui middle aligned center aligned grid" id="login-form">
            <div class="column">
                <h2 class="ui teal image header">
                    <i class="lightbulb icon"></i>
                    <div class="content">
                        Регистрация
                    </div>
                </h2>
                <form class="ui large form {{  (message) ? 'error' : '' }}" action="/auth-signup/" method="post">
                    <input type="hidden" name="submit" value="1"/>
                    <div class="ui stacked segment">
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="user icon"></i>
                                <input type="text" name="name" value="{{ name }}" placeholder="User name">
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="mail icon"></i>
                                <input type="text" name="email" value="{{ email }}" placeholder="E-mail address">
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i>
                                <input type="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <input class="ui fluid large teal submit button" type="submit" value="Зарегистрироваться"/>
                    </div>
                    <div class="ui error message">{{ message }}</div>
                </form>

                <div class="ui message">
                    Уже зарегистрирован? <a href="/">Войди в аккаунт</a>
                </div>
            </div>
        </div>
    {% else %}
        Ты успещно авторизован! <br>
        <small>Пользователь {{ _userId }}.</small>
        <form action="/landing/logout" method="post">
            <input type="submit" value="Выйти"/><br>
        </form>
    {% endif %}
{% endblock %}